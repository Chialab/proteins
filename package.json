{
  "name": "@chialab/proteins",
  "version": "3.3.3",
  "type": "module",
  "description": "A primer for JavaScript libraries and frameworks development.",
  "lib": "src/index.js",
  "main": "dist/cjs/proteins.cjs",
  "module": "dist/esm/proteins.js",
  "browser": "dist/umd/proteins.js",
  "typings": "types/index.d.ts",
  "exports": {
    "require": "./dist/cjs/proteins.cjs",
    "default": "./dist/esm/proteins.js"
  },
  "directories": {
    "src": "src",
    "test": "test",
    "dist": "dist"
  },
  "scripts": {
    "build": "rimraf dist && npm run build:esm && npm run build:cjs && npm run build:umd && npm run types",
    "build:esm": "rna build --production --format esm --output dist/esm/proteins.js",
    "build:cjs": "rna build --production --format cjs --output dist/cjs/proteins.cjs",
    "build:umd": "rna build --production --format umd --output dist/umd/proteins.js",
    "types": "rimraf types && tsc -p config/tsconfig.json",
    "test": "yarn test:browser && yarn test:node",
    "test:browser": "rna unit 'test/*.js' --coverage --browser",
    "test:saucelabs": "rna unit 'test/*.js' --coverage --saucelabs --concurrency 2",
    "test:node": "rna unit 'test/*.js' --coverage --node",
    "lint": "eslint src --cache",
    "docs": "rna documentate --output docs/API.md --header '# API Reference'",
    "prepack": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:chialab/proteins.git"
  },
  "keywords": [
    "proteins",
    "chialab",
    "javascript",
    "utils"
  ],
  "author": "Chialab <dev@chialab.io> (https://www.chialab.it)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chialab/proteins/issues"
  },
  "homepage": "https://chialab.io/p/proteins",
  "devDependencies": {
    "@chialab/eslint-config": "^2.2.1",
    "chai": "^4.1.2",
    "eslint": "^7.24.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.2.4"
  }
}
